# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# BetterAuth Configuration
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# Application URL (for auth client)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database URL for BetterAuth
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration (for password reset)
# SMTP settings for nodemailer
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Code Execution API (Piston)
# Default: https://emkc.org/api/v2/piston (public Piston instance)
# For production, consider self-hosting Piston or using Judge0
CODE_EXECUTION_API_URL=https://emkc.org/api/v2/piston

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Stripe Configuration (for subscriptions)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID=price_xxx
STRIPE_PRO_YEARLY_PRICE_ID=price_xxx
STRIPE_FAMILY_MONTHLY_PRICE_ID=price_xxx
STRIPE_FAMILY_YEARLY_PRICE_ID=price_xxx
STRIPE_TEAM_MONTHLY_PRICE_ID=price_xxx
STRIPE_TEAM_YEARLY_PRICE_ID=price_xxx

# Feature Gating
# Set to 'true' to disable all payment/subscription feature gating
# Useful for development and testing - all users get Pro features
DISABLE_PAYMENT_GATING=false
