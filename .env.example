# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# BetterAuth Configuration
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# Application URL (for auth client)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database URL for BetterAuth
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration (for password reset)
# SMTP settings for nodemailer
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Code Execution API (Piston)
# Default: https://emkc.org/api/v2/piston (public Piston instance)
# For production, consider self-hosting Piston or using Judge0
CODE_EXECUTION_API_URL=https://emkc.org/api/v2/piston

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
